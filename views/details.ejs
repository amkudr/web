<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Movie Details</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
  <!-- Relaxed CSP: Allows necessary domains -->
  <meta http-equiv="Content-Security-Policy" content="
  default-src 'self' https://cdn.jsdelivr.net http://www.omdbapi.com;
  script-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net https://cdn.jsdelivr.net/npm/sweetalert2@11;
  style-src 'self' 'unsafe-inline';
  connect-src 'self' http://www.omdbapi.com;
  img-src 'self' https://m.media-amazon.com;
">
  <style>
    /* Black and green theme styles */
    body {
      background-color: #121212;
      color: #fff;
      font-family: Arial, sans-serif;
    }
    .navbar {
      background-color: #1f1f1f;
    }
    .navbar-brand, .nav-link, .navbar-text {
      color: #00ff00 !important;
    }
    .logout-btn {
      background-color: red;
      border: none;
      color: #fff;
      padding: 8px 12px;
      border-radius: 4px;
    }
    .details-container {
      max-width: 800px;
      margin: 2rem auto;
      background-color: #1f1f1f;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.5);
    }
    .favorites-btn {
      background-color: #00ff00;
      border: none;
      color: #000;
      padding: 10px 20px;
      border-radius: 4px;
      font-weight: bold;
      cursor: pointer;
      margin-top: 15px;
    }
    .favorites-btn:hover {
      background-color: #00cc00;
    }
    #links-section h5 {
      margin-bottom: 15px;
    }
    #links-list li {
      margin-bottom: 10px;
      list-style: none;
    }
    #links-list a {
      color: #00ff00;
      text-decoration: none;
    }
    #links-list a:hover {
      text-decoration: underline;
    }
    .back-btn {
      margin-top: 20px;
    }
  </style>
</head>
<body>
  <!-- Navigation Bar -->
  <nav class="navbar navbar-expand-lg">
    <div class="container">
      <a class="navbar-brand" href="/main">My Movies</a>
      <div class="collapse navbar-collapse">
        <div class="navbar-nav ms-auto">
          <% if (user) { %>
            <span class="navbar-text me-3">Logged in as: <strong><%= user.username %></strong></span>
          <% } else { %>
            <span class="navbar-text me-3">Not logged in</span>
          <% } %>
          <a href="/logout" class="nav-link btn logout-btn">Logout</a>
        </div>
      </div>
    </div>
  </nav>

  <!-- Movie Details Section -->
  <div class="container details-container" id="movie-details">
    <h2 class="text-center">Loading movie details...</h2>
  </div>

  <!-- Favorites Section -->
  <div class="container details-container text-center">
    <button class="favorites-btn" onclick="toggleFavorite()">Add to Favorites</button>
  </div>

  <!-- Link Management Section -->
  <div class="container details-container" id="links-section">
    <h5>Links</h5>
    <ul id="links-list">
      <!-- Existing links will be rendered here by details.js -->
    </ul>
    <button class="btn btn-success mt-3" style="background-color: rgb(255, 215, 0); border: none;" onclick="addLink(imdbID)">Add Link</button>
  </div>

  <!-- Back Button -->
  <div class="container back-btn text-center">
    <a href="/main" class="btn btn-secondary">Back to Home</a>
  </div>

  <!-- Set the imdbID variable by extracting it from the URL -->
  <script>
    const urlParams = new URLSearchParams(window.location.search);
    var imdbID = urlParams.get('imdbID') || "";
  </script>
  <!-- Load SweetAlert2 first -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <!-- Details.js -->
  <script src="/details.js"></script>
  <!-- Bootstrap Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
